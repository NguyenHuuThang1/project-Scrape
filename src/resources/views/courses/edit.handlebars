<div class="mt-4">
    <h3>Cập nhật sản phẩm</h3>
    <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên sản phẩm</label>
            <input type="text" class="form-control" value="{{course.name}}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="price">Giá thành</label>
            <input type="text" class="form-control" value="{{course.price}}" id="price" name="price">
        </div>
        <div class="form-group">
            <label for="img">Link img</label>
            <input type="text" class="form-control" value="{{course.img}}" id="img" name="img">
        </div>
        
        <button type="submit" class="btn btn-primary">Lưu lại</button>
</form>
</div>